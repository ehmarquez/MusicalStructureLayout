<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview_songs"
        style="@style/ListviewSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_dark_material_dark">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:contentDescription="@string/caption_skip_previous"
            app:srcCompat="@drawable/baseline_skip_previous_24" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:contentDescription="@string/caption_play_circle"
            app:srcCompat="@drawable/baseline_play_circle_outline_24" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:contentDescription="@string/caption_skip_next"
            android:textAlignment="viewStart"
            app:srcCompat="@drawable/baseline_skip_next_24" />

    </LinearLayout>
</RelativeLayout>