<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview_songs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/primary_dark_material_dark"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_skip_previous_24" />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_play_circle_outline_24" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textAlignment="viewStart"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_skip_next_24" />

    </LinearLayout>
</RelativeLayout>